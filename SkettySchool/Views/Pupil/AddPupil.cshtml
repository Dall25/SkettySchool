@model SkettySchool.Models.PupilModel
@{
    ViewBag.Title = "Add Pupil";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Add Pupil Page</h2>

 <form asp-action="AddPupil">

      

    <div class="form-group">
                <label class="control-label">First Name</label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
                <label class="control-label">Last Name</label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
                <label class="control-label">Date of Birth</label>
                <input asp-for="@Model.DateOfBirth" class="form-control" />
                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
    </div>
    <div class="form-group">
                <label class="control-label">School Year</label>
                <input asp-for="@Model.SchoolYear" class="form-control" />
                <span asp-validation-for="@Model.SchoolYear" class="text-danger"></span>
    </div>
    <div class="form-group">
                <label class="control-label">User Type</label>
                <input asp-for="@Model.UserType" class="form-control" />
                <span asp-validation-for="@Model.UserType" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save</button>
 
</form>


